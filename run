#!/usr/bin/env ruby
require 'cinch'
require 'nokogiri'
require 'open-uri'
require 'date'

def action
  bot = Cinch::Bot.new do
    configure do |c|
      c.nick = '김젼봇'
      c.realname = 'love'
      c.user = 'slavery'

      c.server = 'irc.ozinger.org'
      c.port = 6697
      c.ssl.use = true

      c.channels = ['#test']
      c.max_reconnect_delay = 60
    end

    on :message, '스트릭' do |m|
      doc = Nokogiri::HTML(open('https://github.com/simnalamburt'))
      doc = doc.css('#contributions-calendar .contrib-column:last')

      count = doc.at_css('span.contrib-number').content.split.first.to_i
      cleared = Date.parse(doc.at_css('span.text-muted:last').content.strip.lines.last.strip) == Date.today

      if count > 0
        message = if cleared
          '오늘의 미션을 클리어하셨습니다. :3'
        else
          '아직 오늘의 미션을 클리어하지 않으셨습니다! ㅇㅅㅇ'
        end
        message = "커밋 스트릭을 #{count}일째 유지중, #{message}"
      else
        message = '커밋 스트릭이 끊겼습니다! (ू˃̣̣︿˂̣̣ ू)'
      end

      m.reply message
    end

    on :message, 'ㅇㅅㅇ)b' do |m|
      m.reply 'd(ㅇㅅㅇ'
    end

    on :message, '>ㅅㅇ' do |m|
      m.reply 'ㅇㅅ<'
    end
  end

  bot.start
end

unless ARGV == ['production']
  trap 'SIGINT' do
    puts ''
    puts 'Bye!'
    puts ''
    exit
  end

  action
else
  loop do
    begin
      action
    rescue Exception => msg
      puts ''
      puts ''
      puts '오직 죽음만이 나를 멈출 수 있다'
      puts ''
      puts msg
      puts ''
      puts ''
    end
  end
end
