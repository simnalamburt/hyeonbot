#!/usr/bin/env ruby
require 'cinch'
require 'nokogiri'
require 'open-uri'
require 'date'
require 'daumdic'

def production?
  ARGV == ['production']
end

def run
  bot = Cinch::Bot.new do
    configure do |c|
      c.nick = if production?; '김젼봇' else '봇테스트' end
      c.realname = 'love'
      c.user = 'slavery'

      c.server = 'irc.ozinger.org'
      c.port = 6697
      c.ssl.use = true

      c.channels = ['#test']
      c.max_reconnect_delay = 60
    end

    on :message, /^d; (.+)$/ do |m, query|
      result = Daumdic.search(query)
      result = 'ㅇㅅㅇ)a' if result.nil?

      m.reply result
    end

    on :message, '스트릭' do |m|
      doc = Nokogiri::HTML(open('https://github.com/simnalamburt'))
      doc = doc.css('#contributions-calendar .contrib-column:last')

      count = doc.at_css('span.contrib-number').content.split.first.to_i
      cleared = Date.parse(doc.at_css('span.text-muted:last').content.strip.lines.last.strip) == Date.today

      if count > 0
        message = if cleared
          '오늘의 미션을 클리어하셨습니다. :3'
        else
          '아직 오늘의 미션을 클리어하지 않으셨습니다! ㅇㅅㅇ'
        end
        message = "커밋 스트릭을 #{count}일째 유지중, #{message}"
      else
        message = '커밋 스트릭이 끊겼습니다! (ू˃̣̣︿˂̣̣ ू)'
      end

      m.reply message
    end

    on :message, 'ㅇㅅㅇ)b' do |m|
      m.reply 'd(ㅇㅅㅇ'
    end

    on :message, '>ㅅㅇ' do |m|
      m.reply 'ㅇㅅ<'
    end
  end

  bot.start
end

if production?
  loop do
    begin
      run
    rescue Exception => msg
      print "\n\n오직 죽음만이 나를 멈출 수 있다\n\n#{msg}\n\n"
    end
  end
else
  trap 'SIGINT' do
    print "\n\nBye!\n\n"
    exit
  end

  run
end
